<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CourseDetailsController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
         </padding>
         <children>
            <!-- Header with Back Button and Title -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <!-- Back button calls handleBack -->
                  <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #4a5568; -fx-text-fill: white; -fx-cursor: hand;" text="&lt; Dashboard" />
                  <VBox>
                     <children>
                        <!-- fx:id="courseTitleLabel" (Set by Controller) -->
                        <Label fx:id="courseTitleLabel" text="Course Name" textFill="#2d3748">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <!-- fx:id="courseIdLabel" (Set by Controller) -->
                        <Label fx:id="courseIdLabel" text="Course ID" textFill="#718096">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Left Side: Score Inputs (Now supports multiple entries per item) -->
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Enter Scores (Out of Total)" textFill="#2d3748">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                           <content>
                              <!-- Dynamic Container: fx:id="scoresVBox" -->
                              <VBox fx:id="scoresVBox" spacing="15.0">
                                 <!-- Dynamic rows for each evaluation group are inserted here -->
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>

                  <!-- Right Side: Grade Summary, Prediction, and Visualization -->
                  <VBox alignment="TOP_CENTER" prefWidth="350.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </padding>
                     <children>
                        <Label text="Current Weighted Grade" textFill="#718096">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <!-- Current Grade Label: fx:id="currentGradeLabel" (Updated in real-time) -->
                        <Label fx:id="currentGradeLabel" text="0.0%" textFill="#2d3748">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="10.0" />
                        
                        <!-- Visualization Placeholder (Complexity Area 3) -->
                        <Pane fx:id="chartPane" prefHeight="200.0" style="-fx-background-color: #f0f4f7; -fx-border-color: #e2e8f0; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                             <Label layoutX="10.0" layoutY="10.0" text="Weight Distribution Chart" textFill="#718096" />
                        </Pane>

                        <!-- Save button calls handleSaveChanges -->
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSaveChanges" prefHeight="40.0" style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-cursor: hand;" text="Save Changes">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
